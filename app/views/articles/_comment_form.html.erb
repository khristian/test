<h3>Post a comment</h3>
<%= form_for @comment do |f| %>
    <% f.hidden_field :article_id %>
    <p>
    <%= f.label :author_name %><br/>
    <%= f.text_field :author_name %>
    </p>
    <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
    </p>
    <p>
    <%= f.submit 'Submit' %>
    </p>
<% end %>